<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main'), width: '100%' %>
      <% if logged_in?(:site_admin) %>
        <div class="portfolio-btn">
          <%= link_to 'Edit item', edit_portfolio_path(@portfolio_item), class: 'btn btn-info', style: 'width:140px' %>
          <%= link_to 'Delete Portfolio', portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <hr>
      <em><%= @portfolio_item.subtitle %></em>
      <p><%= @portfolio_item.body %></p>
      <hr>
      <h3>Technologies Used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>