<div class="album py-5 bg-light">
  <div class="container">
    <% if logged_in?(:site_admin) %>
      <p><%= link_to "Create new item", new_portfolio_url, class: 'btn btn-primary btn-block' %></p>
    <% end %>

    <div class="row <%= 'sortable' if logged_in?(:site_admin) %>">
      <!--manually declared partial-->
      <%= render partial: 'portfolio_item', collection: @portfolio_items %>
    </div>
  </div>
</div>