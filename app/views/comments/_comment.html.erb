<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-1">
          <div class="comment-gravatar">
            <%= gravatar_helper comment.user %>
          </div>
        </div>

        <div class="col-md-11">
          <div class="comment-content">
            <%= comment.content %>
          </div>
          <div class="comment-attribution">
            Comment posted by <span class="comment-author"><%= comment.user.first_name %></span> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
          </div>
        </div>
      </div>
    </div>
  </div>
</div>